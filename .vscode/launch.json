{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PDM Cli Example",
            "type": "python",
            "request": "launch",
            "module": "mc_trimmer",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PY_COLORS": "1",
                "PYTEST_RAISE": "1",
            },
            "args": [
                "--rootdir=.",
                "--capture=tee-sys",
                "-v",
                "tests"
            ]
        },

    ]
}
